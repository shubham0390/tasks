<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/time_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight=".5"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/start_time_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_query_builder_black_24dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time_label_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/start_time_icon"
        android:text="Start"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_label_text_view"
        android:layout_toRightOf="@id/start_time_icon"
        android:text="Set Start Date"
        />
</RelativeLayout>
